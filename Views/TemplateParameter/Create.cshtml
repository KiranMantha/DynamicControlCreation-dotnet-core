@{
    ViewBag.Title = "Create";
}
@model DynamicControlCreation.Models.TemplatesAndParameters.TemplateParameters
@Html.ValidationSummary(true,"Please correct the errors")
<style>
    .validation-summary-errors > ul{list-style-type:decimal;}
</style>
<script src="~/js/Portal.TemplateParameter.js" type="text/javascript"></script>
<h2>Create Parameter</h2>
@{
    using (Html.BeginForm())
     {
        @Html.HiddenFor(m=>m.TemplateParameterID)
        <label>TemplateId</label> 
            @Html.TextBoxFor(m => m.TemplateID)<br />
        <label>Parameter Name</label> 
            @Html.TextBoxFor(m => m.Name)<br />    
        <label>Parameter Type</label> 
            @Html.EnumDropDownListFor(m => m.Type, Model.Types)<br /> 
        <label>Allow Multiple Values</label> 
            @Html.CheckBoxFor(m=>m.AllowMultiple)<br />  <br />    
            @Html.Partial("_AvailableValues", Model)<br />   <br />     
            @Html.Partial("_DefaultValues", Model)<br />    <br />    
        <input type="submit" title="Save" value="Save" />
        <a asp-controller="Template" asp-action="Create" asp-route-ID="@Model.TemplateID">&lt; Back</a>
     } 
}
